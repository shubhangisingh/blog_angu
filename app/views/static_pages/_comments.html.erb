<div class="comments"  ng-init="abc(post)" ng-controller="CommentController as commentCtrl">
                  <h3>Comments</h3>
                  <ul>
                    <li ng-repeat="comment in post.comments" >
                      "{{comment.body}}"
                      <cite>- <b>{{comment.name}}</b></cite>
                    </li>
                  </ul>
                   <form name="commentForm" ng-submit="commentCtrl.addComment(post)" >
                    <h4>Add Comment</h4>
                    <div class="form-group">
                      <textarea ng-model="commentCtrl.comment.body" cols="30" rows="10" required></textarea class="form-control" >
                      </div>
                      <div class="form-group">
                        <label for="">by:</label>
                        <input type="text" ng-model="commentCtrl.comment.name" required placeholder="Author Name"/>
                      </div>
                      <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>